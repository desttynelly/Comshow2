    <script>
        document.addEventListener("DOMContentLoaded", () => {
  const starContainers = document.querySelectorAll(".stars.interactive");

  starContainers.forEach((container, index) => {
    const stars = container.querySelectorAll(".star");

    // Load and apply saved rating from localStorage
    const savedRating = localStorage.getItem(`rating-${index}`);
    if (savedRating) {
      container.setAttribute("data-rating", savedRating);
      updateSelectedStars(container, savedRating);
    }

    stars.forEach(star => {
      // Highlight stars on hover
      star.addEventListener("mouseover", () => {
        resetStars(container);
        highlightStars(star);
      });

      // Set rating on click
      star.addEventListener("click", () => {
        const rating = star.getAttribute("data-value");
        container.setAttribute("data-rating", rating);
        localStorage.setItem(`rating-${index}`, rating); // Save rating to localStorage
        updateSelectedStars(container, rating);
      });
    });

    // Reset stars when mouse leaves
    container.addEventListener("mouseleave", () => {
      resetStars(container);
      const rating = container.getAttribute("data-rating");
      updateSelectedStars(container, rating);
    });
  });

  // Helper: Highlight stars up to the hovered one
  function highlightStars(star) {
    star.style.color = "#ffcc00"; // Highlight this star
    let prev = star.previousElementSibling;
    while (prev) {
      prev.style.color = "#ffcc00"; // Highlight previous stars
      prev = prev.previousElementSibling;
    }
  }

  // Helper: Reset all stars to default
  function resetStars(container) {
    const stars = container.querySelectorAll(".star");
    stars.forEach(star => {
      if (!star.classList.contains("selected")) {
        star.style.color = "#ccc"; // Reset color for non-selected stars
      }
    });
  }

  // Helper: Update stars based on current rating
  function updateSelectedStars(container, rating) {
    const stars = container.querySelectorAll(".star");
    stars.forEach(star => {
      if (parseInt(star.getAttribute("data-value")) <= rating) {
        star.style.color = "#ffcc00"; // Keep the selected stars highlighted
        star.classList.add("selected");
      } else {
        star.style.color = "#ccc"; // Reset the rest
        star.classList.remove("selected");
      }
    });
  }
});

